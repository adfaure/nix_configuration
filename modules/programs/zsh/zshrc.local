# prompt adam2

# Set vim bindings
bindkey -v

# Start ranger file navigator
alias r='ranger'
alias gs='git status'
alias gl='git l'

_ranger () {
 command ranger "$(pwd)" <$TTY
 print -n "\033[A"
 zle && zle -I
 cd "$(grep \^\' ~/.config/ranger/bookmarks | cut -b3-)"
}

zle -N _ranger
bindkey -v '^N' _ranger

bindkey '^a' history-incremental-search-backward

